<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/finance_toolbar_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/finance_toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:paddingTop="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/finance_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="投资理财"
                android:textColor="#3f4450"
                android:textSize="22sp"
                 />

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/finance_scan"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/itv_finance_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="{icon-scan}"
                    android:textColor="#60A7FC"
                    android:textSize="18sp" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/finance_service"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:gravity="right">

                <TextView
                    android:id="@+id/itv_finance_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:textColor="#60A7FC"
                    android:textSize="14sp" />
            </android.support.v7.widget.LinearLayoutCompat>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

</android.support.v7.widget.LinearLayoutCompat>