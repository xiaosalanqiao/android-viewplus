<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_empty_page_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:layout_centerVertical="false"
    android:background="@color/fragment_bgc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_empty_page_err_img"
            style="@style/vp_empty_img"
            android:layout_gravity="center"
            android:src="@drawable/err_404" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_empty_page_err_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/tv_empty_page_err_txt_margin_top_2_img"
            android:layout_marginTop="@dimen/tv_empty_page_err_txt_margin_top_2_img"
            android:layout_marginRight="@dimen/tv_empty_page_err_txt_margin_top_2_img"
            android:text="@string/h5_load_timeout_err"
            android:textColor="@color/fields_hint_text"
            android:textSize="@dimen/empty_page_hint_txt" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tv_empty_page_refresh_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/reload"
            android:textColor="@color/link_color"
            android:textSize="@dimen/empty_page_link_txt" />
    </LinearLayout>


</RelativeLayout>