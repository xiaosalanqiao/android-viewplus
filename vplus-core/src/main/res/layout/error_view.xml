<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_empty_page_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bgc">

    <de.hdodenhof.circleimageview.CircleImageView
        style="@style/vp_empty_img"
        android:src="@drawable/err_500" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_empty_page_err_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/civ_empty_page_err_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/tv_empty_page_err_txt_margin_top_2_img"
        android:textColor="@color/fields_hint_text"
        android:text="@string/send_err_req_hint_msg"
        android:textSize="@dimen/empty_page_hint_txt" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tv_empty_page_refresh_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_empty_page_err_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="@dimen/empty_page_link_txt"
        android:textColor="@color/link_color"
        android:text="@string/reload" />


</RelativeLayout>